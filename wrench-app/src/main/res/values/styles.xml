<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.Button" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
    </style>

    <style name="AppTheme.Button.Warning">
        <item name="android:textColor">@color/warning</item>
    </style>

    <style name="TextAppearance.Dialog.Title" parent="TextAppearance.AppCompat.Large">
        <item name="android:padding">16dp</item>
    </style>
</resources>
